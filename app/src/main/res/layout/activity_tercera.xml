<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#424242"
    android:orientation="vertical"
    tools:context="com.marcelotorrezazuga.android.tiendadelibros.TerceraActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tienda de Libros"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:text="Desarrollado por:\n   Marcelo Torrez Azuga"
        android:id="@+id/textView7"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Materia:\n    INF - 121 Lic. Felipez\n"
        android:textColor="#FFFFFF"
        android:id="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="La Paz - Bolivia 2015"
        android:textColor="#FFFFFF"
        android:id="@+id/textView9"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
